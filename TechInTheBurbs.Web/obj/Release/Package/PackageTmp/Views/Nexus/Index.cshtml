@model IList<TechInTheBurbs.Web.Models.VMListModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>
    <tr>
        <th>
            VM
        </th>
        <th>
            Status
        </th>
        <th>
            Status Code
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.StatusCode)
            </td>
            <td>
                @Html.ActionLink("Start", "Start", new { name=item.Name })
            </td>
            <td>
                @Html.ActionLink("Stop", "Stop", new { name = item.Name })
            </td>
            <td>
                @Html.ActionLink("Restart", "Restart", new { name = item.Name })
            </td>
        </tr>
    }

</table>
